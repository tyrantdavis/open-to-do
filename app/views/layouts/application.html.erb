<!DOCTYPE html>
<html>
<head>
  <title>OpenToDo</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container-fluid">
   <ul class="nav nav-tabs">
    <li><%= link_to "Home", welcome_index_path %></li>
    <li><%= link_to "About", welcome_about_path %></li>
    <li class="pull-right user-info"><%= link_to "Sign Up", :class => 'navbar-link' %></li>
    <li class="pull-right user-info"><%= link_to "Sign In", :class => 'navbar-link' %></li>
   </ul>

   <div class="pull-right user-info">
     <ul class="nav nav-tabs">
      <!-- <%#= link_to 'My List',  :class => 'navbar-link' %> | -->
      <!-- <%#= link_to 'Edit profile', :class => 'navbar-link' %> | -->
      <%#= link_to "Logout",  method: :delete %>
    </ul>


   </div>

 </ul>

 <% if flash[:notice] %>
   <div class="alert alert-success">
     <button type="button" class="close" data-dismiss="alert">&times;</button>
 <%= flash[:notice] %>
   </div>
 <% elsif flash[:error] %>
   <div class="alert alert-danger">
     <button type="button" class="close" data-dismiss="alert">&times;</button>
  <%= flash[:error] %>
   </div>
 <% elsif flash[:alert] %>
   <div class="alert alert-warning">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
 <%= flash[:alert] %>
   </div>
 <% end %>

<%= yield %>
  </div>

</body>
</html>
